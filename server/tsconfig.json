{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "baseUrl": "./src",
  "paths": {
    "@config/*": ["config/*"],
    "@services/*": ["services/*"]
  },
  "exclude": ["node_modules", "tests"]
}
